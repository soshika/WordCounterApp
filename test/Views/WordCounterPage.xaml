<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="test.Views.WordCounterPage">


    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Text="{Binding Counter}" FontSize="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            <Entry Grid.Row="2" VerticalOptions="Center" Placeholder="type something..." Text="{Binding Input}"  Margin="30, 0"/>
            <Button Grid.Row="3" Text="count!" Style="{StaticResource MainButton}" Command="{Binding SetCounter}" />
            <Button Grid.Row="4" Text="tutorial" Style="{StaticResource MainButton}" Clicked="Button_Clicked"  />
        </Grid>
        
    </ContentPage.Content>
</ContentPage>
